
generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id  String @id @default(uuid())
    username String @unique
    password String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    messages Message[]
    rooms Room[] @relation("UsersToRooms")
}

model Room {
    id String @id @default(uuid())
    name String?
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    users User[] @relation("UsersToRooms")
    messages Message[]
}

model Message {
    id String @id @default(uuid())
    content String
    createdAt DateTime @default(now())
    userId String
    roomId String
    user User @relation(fields: [userId], references: [id])
    room Room @relation(fields: [roomId], references: [id])
}